global-reset()
normalize-css()

.clearfix
  clearfix()

body
  background #e0e0e0
  font-family STXihei, "华文细黑", 'Helvetica Neue', Helvetica, sans-serif
  min-width 1080px

.container
  position relative
  margin 0 auto
  //box-shadow 0 2px 2px 0 rgba(0,0,0,.14),0 3px 1px -2px rgba(0,0,0,.2),0 1px 5px 0 rgba(0,0,0,.12)
  width 1080px
  //border-radius 4px


.sidebar
  position absolute
  top 0
  bottom 0
  width 300px
  //height 3500px
  padding 15px 20px 15px 20px
  background #2d2d2d
  color #fff
  line-height 1.5
  box-sizing border-box


.sidebar a
  color #fff


.title
  margin 25px 0 20px
  text-align center


.title img
  display block
  margin 0 auto 15px
  width 160px
  height: 160px
  border-radius: 80px
  border: 3px solid #fff


h1
  font-size 28px
  font-weight normal


h2
  font-size 14px


.side-info li
  padding-top 20px
  color: #d8d8d8


.side-info dt
  font-size 18px
  color #ffffff
  line-height 40px

.side-info dt span
  font-size: 16px;
  font-weight: lighter

.side-info dd
  margin-top 5px
  font-size 12px
  line-height 20px


.someRight dd
  margin-left 25px


.skill
  position relative


.skill-name
  width 100px
  font-size 14px
  display inline-block
  position relative
  left 25px
  top -3px


.skill-bar-wrap
  height 14px
  width 150px
  background #9c9c9c
  display inline-block
  border-radius 20px


.skill-bar
  height 14px
  background #fff
  border-radius 20px 0 0 20px


.note
  text-indent 2em
  margin-top 90px
  color #004d40
  font-size 18px


.main
  position relative
  left 300px
  width 740px
  padding 15px 20px
  //background #f0f2f1
  background #ffffff
  //height 3500px




.main a
  color #4db6ac


.main-info > li
  padding-top 20px


.main-info dt
  font-size 24px
  //color #00796b
  color #3d3d3d
  line-height 30px
  padding-bottom 20px
  border-bottom 1px solid #2d2d2d
  margin 10px 10px 15px 5px


.main-info dd
  font-size 15px
  line-height 27px
  color #616161


.main-info span
  color #000
  font-size 16px

h2
  font-size 22px
  color #000
  &.exp-title
    margin 10px 0


h3
  font-size 19px
  color #000
  margin 0 0 15px 5px


h4
  line-height 30px
  font-size 18px
  color #000
  position relative
  bottom 3px
  top -10px


h5
  clear both
  font-size 16px
  color #000
  line-height 25px


.fa
  margin-right 2px


h4 a,
h5 a
  font-size 12px
  border 1px solid #4db6ac
  padding 1px 3px
  border-radius 5px
  margin-left 7px
  text-decoration none

.circle
  height 12px
  width 12px
  border-radius 100%
  background #2d2d2d
  float left
  position absolute
  left -26px
  top -5px

.exp-title
  margin-top 30px

.exp 
  border-left 1px solid #2d2d2d
  margin-left 15px


.exp p
  font-size 15px
  color #616161
  line-height 22px
  margin-bottom 3px

.experience p
  text-indent 20px


.exp > li
  position relative
  margin 25px 0 10px 20px

.skill-item > li
  position relative
  margin 10px 0 10px 20px

.skill .exp
  border-left 0
  & li
    list-style circle


.exp img
  width 200px

.exp img
  width 150px
  float left
  margin-right 10px


.exp ul > li
  margin 0 0 5px 0


.efe .task4img img
  height 97px
  width inherit


footer
  margin 30px 0 20px


footer p
  text-align center
  color #616161
  font-size 14px


footer a
  color #616161


.throb
  animation throb 1.33s ease-in-out infinite

svg
  size 150px 200px

@keyframes throb
  0%
    transform scale(1)
  50%
    transform scale(0.8)
  100%
    transform scale(1)

@keyframes blink
  0%
    transform scale(0.1)
  10%
    transform scale(1)
  100%
    transform scale(1)
